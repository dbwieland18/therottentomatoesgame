<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link href="/game.css" rel="stylesheet" type="text/css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <script src="/game.js"></script>
</head>
<body>
  <div class="container">
    <div class="jumbotron text-center">
      <div id="loader" style="display:none;"><img src='http://www.baxcha.com/images/ajax-loader.gif'/></div>
      <div id="movie-info">
        <h1><%= @first_movie.title %></h1>
        <div id="id-holder" style="visibility:hidden;"><%= @ids %></div>
        <span id="critics-score" style="display:none;" data-score=<%= @first_movie.ratings.critics_score %>><%= @first_movie.ratings.critics_score %></span>
        <div id="current-movie">
          <img src="<%= @first_movie.posters.thumbnail %>">
          <span id="actors"><i><%= @first_movie.abridged_cast.map {|actor| actor.name}.join(", ") %></i></span>
          <h3 id="year"><%= @first_movie.year %></h3>
        </div>
        <button class="btn btn-primary" style="display:none" id="next-movie">next movie</button><br>
      </div>
    </div>
    
    <div id="playing-area">
      <h2 style="display:inline;">player 1</h2><input id="p1-guess">current score:<span id="p1-score">0</span><br>
      <h2 style="display:inline;">player 2</h2><input id="p2-guess">current score:<span id="p2-score">0</span><br> 
      <h2 style="display:inline;">player 3</h2><input id="p3-guess">current score:<span id="p3-score">0</span><br>
    </div>
    <button id="submit-guesses">submit</button> 
    <form action="/" method="get" id="restart-button" style="display:none;">
      <input id="search" type="submit" value="restart">
    </form>
  </div>
</body>
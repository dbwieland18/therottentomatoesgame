<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link href="/index.css" rel="stylesheet" type="text/css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <script src="/index.js"></script>
</head>
<div class="container">
  <div class="page-header">
    <h1>The Rotten Tomatoes Game<small> ... as heard on the Adam Carolla Show</small></h1>
  </div>

  <div class="well">
    <div class="input-group">
      <span class="input-group-btn">
        <form action="/searchMovies" method="post">
          <button class="btn btn-default" id="search" type="submit">Find Movie</button>
        </form>
      </span>
      <input type="text" class="form-control" name="title">
    </div>  


    <div id="search-results">
      <div id="ajax-results"></div>
      <!-- insert ajax movie results -->
      <ul id="possible-matches-list">
      </ul>
    </div>
  </div>

  <div class="panel panel-success">
    <div class="panel-heading">
      <h4>Upcoming Game</h4>
    </div>
    <div class="panel-body">
      <div id="upcoming-game">
      </div>
    </div>
    <div class="panel-footer">
      <form action="/start" method="post">
        <input type="hidden" id="mov-ids" name="movies">
        <button style="display:none;" class="btn-success" id="start-game" type="submit" value="">START GAME!</button>
      </form>
    </div>
  </div>

  <form action="/" method="get" class="pull-right">
        <input id="restart" type="submit" value="restart movie selection">
  </form>
</div>








